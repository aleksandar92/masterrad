<Window x:Class="RDFSParserOWL2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generator" Height="700" Width="1500">

    <Grid Margin="0,0,-489,-151">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="505*"/>
            <ColumnDefinition Width="344*"/>
            <ColumnDefinition Width="499*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Files for parsing:" HorizontalAlignment="Left" Margin="18,181,0,0" VerticalAlignment="Top" Height="38" Width="185"/>
        <Label Content="Name of the extracted ontology:" HorizontalAlignment="Left" Margin="15,360,0,0" VerticalAlignment="Top" Height="37" Width="206"/>
        <Label HorizontalAlignment="Left" Margin="211,250,0,0" VerticalAlignment="Top" Height="10" Width="10"/>
        <TextBox Name="txtOntology" HorizontalAlignment="Left" Height="48" Margin="241,349,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="735" Grid.ColumnSpan="2"/>
        <Label Content="Name of the roof ontology:" HorizontalAlignment="Left" Margin="18,561,0,0" VerticalAlignment="Top" Height="34" Width="185" RenderTransformOrigin="0.475,2.826"/>
        <TextBox Name="txtRoofOntology" HorizontalAlignment="Left" Height="48" Margin="241,547,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="735" Grid.ColumnSpan="2"/>
        <ListBox Name="lbFilesParsing" ScrollViewer.HorizontalScrollBarVisibility="Auto"  ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="259" Margin="241,53,0,0" VerticalAlignment="Top" Width="735" Grid.ColumnSpan="2"/>
        <Button x:Name="btnImport"  Content="Browse" HorizontalAlignment="Left" Margin="262,53,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click" RenderTransformOrigin="0.093,2.25" Height="20" Grid.Column="1"/>
        <Button Content="Convert all" HorizontalAlignment="Left" Margin="262,123,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click_1" Height="20" Grid.Column="1"/>
        <CheckBox Unchecked="cbOntology_Checked" x:Name="cbOntology" Content="Extract ontology" HorizontalAlignment="Left" Margin="279,365,0,0" VerticalAlignment="Top" Checked="cbOntology_Checked" Height="13" Width="149" Grid.Column="1"/>
        <CheckBox x:Name="cbRoofOntology" Content="Roof ontology " HorizontalAlignment="Left" Margin="279,566,0,0" VerticalAlignment="Top" Unchecked="CheckBox_Checked" Checked="CheckBox_Checked" Height="13" Width="103" Grid.Column="1"/>
        <Button Content="Remove selected" Grid.Column="1" HorizontalAlignment="Left" Margin="262,160,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click_2"/>
        <Button Content="Remove all" Grid.Column="1" HorizontalAlignment="Left" Margin="262,199,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click_3"/>
        <Button Content="Convert selected" Grid.Column="1" HorizontalAlignment="Left" Margin="262,88,0,0" VerticalAlignment="Top" Width="95" Click="Button_Click_4"/>
        <Label Content="Extracted onology namespace:" HorizontalAlignment="Left" Margin="28,461,0,0" VerticalAlignment="Top" Width="183"/>
        <TextBox Name="txtExtOnt" HorizontalAlignment="Left" Height="48" Margin="244,461,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="735" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
